section.orderer
  .row
    .columns.text-center
      .margin-bottom-medium.light-weight <strong>#{user.name}</strong> pays.
      .margin-bottom-medium.light-weight Ordering from: <strong>#{from}</strong>
      .margin-bottom-medium.light-weight Total is: <strong class="title-total">#{total}</strong>
      .margin-bottom-medium.light-weight Status: <strong>#{Humanize.titleCase(status.replace('_', ' '))}</strong>
  .row.margin-bottom-medium
    .columns.text-center
      if status !== 'delivered'
        a.button(href="/orders/#{id}/edit", data-navigate) Edit Order
      if ordered_by_current_user
        if status === 'in_progress'
          a.button.change-status-button(href="#") Mark as ordered
        if status === 'ordered'
          a.button.change-status-button(href="#") Mark as delivered
